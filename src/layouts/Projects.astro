---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import { SITE } from "@config";
import ProjectCardGroup from "@/components/projects/ProjectCardGroup.astro";

export interface Props {
    projects: Array<{
        id: string;
        title: string;
        link: string;
        shortExcerpt: string;
        type?: string;
        component?: string;
        badgeContent?: string;
        logo?: string;
    }>;
    title: string;
}

const { projects, title } = Astro.props;
---

<Layout
    title={`${title} - ${SITE.title}`}
    description={`A list of projects from ${SITE.author} in ${SITE.title}`}
>
    <div class="grid gap-16 md:gap-24 lg:gap-32">
        <SectionContainer class="projects--container">
            <div class="flex flex-row my-4 items-center text-neutral-500">
                <h2 class="font-medium text-h4 mx-4 text-zinc-800 leading-8 tracking-tighter mb-0">
                    Projects
                </h2>
            </div>

            <ProjectCardGroup projects={projects} />
        </SectionContainer>
    </div>
</Layout>
