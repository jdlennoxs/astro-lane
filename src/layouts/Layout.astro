---
// Import the global.css file here so that it is included on
// all pages through the use of the <SEO /> component.
import "../styles/globals.scss";
import SEO from "@/components/seo/SEO.astro";
import Header from "@/components/header/Header.astro";
import Logo from '@/components/header/Logo.astro';
import ToggleMenu from '@/components/header/ToggleMenu.astro';
import planet from "@/components/header/planet.svg?raw";
import ThemeSwitcher from "@/components/ThemeSwitcher";
import Analytics from '@vercel/analytics/astro';

interface Props {
    class?: string;
    title: string;
    description?: string;
    keywords?: string;
    url?: string;
    image?: string;
    children?: any;
}

const currentYear = new Date().getFullYear();

const {
    class: className,
    title,
    description,
    keywords,
    url,
    image
} = Astro.props;

// Check if we're on a blog post page
const isBlogPost = Astro.url.pathname.match(/^\/posts\/[^0-9/]+\/?$/);
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <SEO
            title={title}
            description={description}
            keywords={keywords}
            url={url}
            image={image}
        />
        <link href="prism-material-dark.css" rel="stylesheet" />
        <script>
            // Initialize theme
            const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.classList.add(theme);
        </script>
    </head>
    <body class="bg-background text-text transition-colors duration-300">
