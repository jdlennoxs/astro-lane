---
// Import the global.css file here so that it is included on
// all pages through the use of the <SEO /> component.
import "../styles/globals.scss";
import SectionContainer from "@/components/SectionContainer.astro";
import SEO from "@/components/seo/SEO.astro";
import { Icon } from "astro-icon";
import { SOCIALS } from "@config";
import Header from "@/components/header/Header.astro";
import GridWrapper from "@/components/grid-wrapper/GridWrapper.astro"
import { Image } from "@astrojs/image/components";
import profileImage from "../../public/icons/avenue-icon-alt.png";
import Logo from '@/components/header/Logo.astro';

const currentYear = new Date().getFullYear();

const {
    class: className,
    title,
    description,
    keywords,
    url,
    twitterhandle,
    image
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <SEO
            title={title}
            description={description}
            keywords={keywords}
            url={url}
            image={image}
        />
          <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz@9..40&display=swap" rel="stylesheet" />
    <link href="prism-material-dark.css" rel="stylesheet" />
    </head>
    <body class="bg-white">
        <div class="max-w-8xl mx-auto mt-12">
        <!-- <Header /> -->
        <main>
            <div  class={`grid grid-cols-4 max-w-8xl mx-auto ${className}`}>
                <div class="col-span-1">
                        <Logo/>
                        <div
                            class="content text-lg md:text-xl font-medium tracking-tight lg:tracking-tighter text-neutral-500 p-2"
                        >
                             I'm Jack, I make fun things on the internet and don't really write about them.
                        </div>
                </div>
            <div class="col-span-3">    
            <slot />
            </div>
            </div>
            <!-- <GridWrapper>
                <slot />
            </GridWrapper> -->
        </main>

        <SectionContainer class="mt-32">
            <footer class="m-4 grid gap-3">
                <!-- <div class="p-8 grid rounded-xl bg-[#a9ffdb] text-[#95ffd3]"> -->
                <div class="p-8 grid rounded-xl bg-white border text-[#5162ff]">
                    <h2
                        class="font-medium text-3xl md:text-4xl leading-10 tracking-tight lg:tracking-tighter"
                    >
                       jdlennoxs
                    </h2>
                    <p
                        class="text-neutral-500 font-medium text-xl md:text-2xl leading-10 tracking-tight lg:tracking-tighter"
                    >
                        If you want to know more about tweaking my style, adding
                        more posts, and making it truly yours, just click on the
                        GitHub link below to check out my repo.
                    </p>
                    <div class="footer-credits text-neutral-500">
                        <a
                            class="block text-3xl md:text-5xl lg:text-4xl font-medium mb-2 md:mb-8 lg:mb-4 leading-10 tracking-tighter relative hover:underline hover:-top-0.5 hover:text-skin-accent hover:text-black focus-visible:p-1"
                            href="mailto:hey@avenuelabs.co"
                        >
                            hey@avenuelabs.co
                        </a>
                        <div
                            class="footer-socials font-medium flex gap-6 md:gap-10 max-w-md text-xl md:text-3xl lg:text-2xl leading-10 tracking-tighter"
                        >
                            {
                                SOCIALS.filter((social) => social.active).map(
                                    (social) => (
                                        <a
                                            href={social.href}
                                            class="relative hover:underline hover:-top-0.5 hover:text-skin-accent hover:text-black focus-visible:p-1 flex items-center"
                                            target="_blank"
                                            title={social.title}
                                        >
                                            <Icon
                                                name={social.icon}
                                                class="w-10 h-10 inline"
                                            />
                                        </a>
                                    )
                                )
                            }
                        </div>
                    </div>
                    
                </div>
                <span
                        class="text-neutral-500 text-md flex flex-wrap gap-4 md:gap-0 md:justify-between"
                    >
                        <span>Copyright Â© {currentYear} ðŸŒ± Jack Scott</span>
                    </span>
            </footer>
        </SectionContainer>
        </div>
    </body>
</html>
