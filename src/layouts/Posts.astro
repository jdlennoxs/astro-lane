---
import Layout from "@/layouts/Layout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import { Icon } from "astro-icon/components";
import { SITE } from "@config";
import type { CollectionEntry } from "astro:content";
import PostList from "@/components/posts/PostList.astro";

export interface Props {
    pageNum: number;
    totalPages: number;
    posts: CollectionEntry<"post">[];
    title: string;
}

const { pageNum, totalPages, posts, title } = Astro.props;

const prev = pageNum > 1 ? "" : "disabled";
const next = pageNum < totalPages ? "" : "disabled";

---

<Layout
    title={`${title} - ${SITE.title}`}
    description={`A list of posts from ${SITE.author} in ${SITE.title}`}
>
    <div class="grid gap-16 md:gap-24 lg:gap-32">
        <SectionContainer class="blogs--container">
            <div class="flex flex-row my-4 items-center text-secondary-500 dark:text-secondary-400">
                <div class="mx-4 mb-4">
                    <h1 class="font-medium text-h3 text-text dark:text-cream leading-8 tracking-tighter font-sans">
                        Posts
                    </h1>
                    <div class="w-12 h-0.5 bg-primary-500 mt-3"></div>
                </div>
            </div>

            <PostList posts={posts} />

            {
                totalPages > 1 && (
                    <nav
                        class="pagination--container flex flex-wrap mx-auto justify-center mt-8 text-secondary-500 dark:text-secondary-400"
                        aria-label="Pagination"
                    >
                        <a
                            tabindex={prev === "disabled" ? "-1" : "0"}
                            href={`/posts${
                                pageNum - 1 !== 1 ? "/" + (pageNum - 1) : "/"
                            }`}
                            class={`mr-4 select-none flex flex-wrap hover:text-secondary-900 dark:hover:text-secondary-100 transition-colors duration-300 ${
                                prev === "disabled"
                                    ? "disabled select-none pointer-events-none opacity-70"
                                    : ""
                            }`}
                            aria-label="Previous"
                            aria-disabled={prev === "disabled"}
                        >
                            <Icon
                                name="ph:arrow-left-light"
                                class="w-6 h-6 mr-4"
                            />
                            Prev
                        </a>
                        <a
                            tabindex={next === "disabled" ? "-1" : "0"}
                            href={`/posts/${pageNum + 1}`}
                            class={`ml-4 select-none flex flex-wrap hover:text-secondary-900 dark:hover:text-secondary-100 transition-colors duration-300 ${
                                next === "disabled"
                                    ? "disabled select-none pointer-events-none opacity-70"
                                    : ""
                            }`}
                            aria-label="Next"
                            aria-disabled={next === "disabled"}
                        >
                            Next
                            <Icon
                                name="ph:arrow-right-light"
                                class="w-6 h-6 ml-4"
                            />
                        </a>
                    </nav>
                )
            }
        </SectionContainer>
    </div>
</Layout>
