---
import { Icon } from 'astro-icon';
import Logo from './Logo.astro';
import ToggleMenu from './ToggleMenu.astro';

---

<header class="mx-auto w-full max-w-6xl flex-none bg-white">
  <div class="mx-auto w-full  space-x-6 px-3 py-4 md:flex md:px-4">
    <div class="flex justify-between">
      <a class="flex items-center" href={"/"}>
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="hidden h-screen w-full items-center space-x-6 text-zinc-600 dark:text-zinc-300 md:flex md:h-auto md:w-auto"
      aria-label="Main navigation"
      id="menu"
    >
      <ul
        class="invisible flex w-full flex-col space-x-6 pt-8 text-xl md:visible md:w-auto md:flex-row md:self-center md:pt-0 md:text-base"
      >
        <li>
          <a
            class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href={"/posts"}
            >Posts
          </a>
        </li>
        <li>
          <a
            class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href={"/projects"}>Projects</a
          >
        </li>
        <li>
          <a
            class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href={"/about"}>About</a
          >
        </li>
        <li class="md:hidden">
          <a
            class="flex items-center px-4 py-3 font-bold transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href="https://github.com/onwidget/astrowind"
            >Github
          </a>
        </li>
      </ul>
      <div class="mb-4 ml-2 flex items-center md:mb-0 md:self-center">
        <div class="hidden items-center space-x-6 md:flex">
          <!-- <ToggleTheme iconClass="w-5 h-5" /> -->
          <a
            class="inline-flex items-center rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
            aria-label="RSS Feed"
            href="/rss.xml"
          >
            <Icon name="tabler:satellite" class="h-5 w-5" />
          </a>
          <a
            href="https://github.com/onwidget/astrowind"
            class="inline-block rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
            aria-label="Astrowind Github"
          >
            <Icon name="tabler:brand-github" class="h-5 w-5" />
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
