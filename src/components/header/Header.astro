---
import { Icon } from "astro-icon/components";
import Logo from "./Logo.astro";
import { SOCIALS } from "@config";

---

<header class="hidden md:block md:fixed left-0 bottom-0 h-full w-24 bg-white flex flex-col overflow-y-auto">
  <div class="flex flex-col h-full py-4 px-2 min-h-[500px]">
    <nav
      class="h-full w-full items-center text-zinc-600 dark:text-zinc-300 flex flex-col"
      aria-label="Main navigation"
      id="menu"
    >
      <ul
        class="flex w-full flex-col items-center pt-4 text-xl md:w-auto md:pt-4 md:text-base"
      >
      <li class="relative w-24 h-24 flex justify-center">
        <a
          class="absolute whitespace-nowrap px-2 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white transform rotate-90 origin-center"
          href={"/projects"}>Projects</a
        >
      </li>
        <li class="relative w-24 h-24 flex justify-center">
          <a
            class="absolute whitespace-nowrap px-2 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white transform rotate-90 origin-center"
            href={"/posts"}
            >Posts
          </a>
        </li>
        <li class="relative w-24 h-24 flex justify-center">
          <a
            class="absolute whitespace-nowrap px-2 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white transform rotate-90 origin-center"
            href={"/about"}>About</a
          >
        </li>
      </ul>
      <div class="mt-auto flex flex-col items-center space-y-4">
        <div class="flex flex-col items-center space-y-4 md:flex">
          {SOCIALS.filter((social) => social.active).map(
            (social) => (
              <a
                href={social.href}
                class="inline-flex items-center rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
                target="_blank"
                title={social.title}
              >
                <Icon name={social.icon} class="w-5 h-5" />
              </a>
            )
          )}
          <!-- <a
            class="inline-flex items-center rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
            aria-label="RSS Feed"
            href="/rss.xml"
          >
            <Icon name="tabler:satellite" class="h-5 w-5" />
          </a> -->
        </div>
      </div>
    </nav>
  </div>
</header>

<!-- Mobile Menu -->
<div id="mobile-menu" class="fixed inset-0 z-50 hidden bg-white md:hidden">
  <div class="flex h-full flex-col">
    <div class="flex items-center justify-between p-4">
      <a href="/" class="flex items-center">
        <Logo class="h-12 w-12" />
      </a>
      <button
        class="rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
        aria-label="Close menu"
        data-aw-toggle-menu
      >
        <Icon name="tabler:x" class="h-6 w-6" />
      </button>
    </div>
    <nav class="flex-1 overflow-y-auto p-4" aria-label="Mobile navigation">
      <ul class="space-y-4">
        <li>
          <a
            class="block px-4 py-2 text-lg font-medium text-zinc-600 hover:text-gray-900 dark:text-zinc-300 dark:hover:text-white"
            href="/projects"
          >
            Projects
          </a>
        </li>
        <li>
          <a
            class="block px-4 py-2 text-lg font-medium text-zinc-600 hover:text-gray-900 dark:text-zinc-300 dark:hover:text-white"
            href="/posts"
          >
            Posts
          </a>
        </li>
        <li>
          <a
            class="block px-4 py-2 text-lg font-medium text-zinc-600 hover:text-gray-900 dark:text-zinc-300 dark:hover:text-white"
            href="/about"
          >
            About
          </a>
        </li>
      </ul>
      <div class="mt-8 flex flex-wrap gap-4">
        {SOCIALS.filter((social) => social.active).map(
          (social) => (
            <a
              href={social.href}
              class="inline-flex items-center rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
              target="_blank"
              title={social.title}
            >
              <Icon name={social.icon} class="w-5 h-5" />
            </a>
          )
        )}
        <a
          class="inline-flex items-center rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
          aria-label="RSS Feed"
          href="/rss.xml"
        >
          <Icon name="tabler:satellite" class="h-5 w-5" />
        </a>
      </div>
    </nav>
  </div>
</div>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButtons = document.querySelectorAll('[data-aw-toggle-menu]');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenu) {
      toggleButtons.forEach(button => {
        button.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
          document.body.style.overflow = mobileMenu.classList.contains('hidden') ? '' : 'hidden';
        });
      });
    }
  });
</script>
