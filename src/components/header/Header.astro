---
import { Icon } from 'astro-icon';
import Logo from './Logo.astro';
import ToggleMenu from './ToggleMenu.astro';

---

<header class="fixed left-0 top-0 h-full w-24 bg-white flex flex-col">
  <div class="flex flex-col h-full py-4 px-2">
    <div class="flex flex-col items-center">
      <a class="flex items-center" href={"/"}>
        <Logo />
      </a>
      <div class="md:hidden mt-4">
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="hidden h-full w-full items-center text-zinc-600 dark:text-zinc-300 md:flex md:flex-col"
      aria-label="Main navigation"
      id="menu"
    >
      <ul
        class="invisible flex w-full flex-col items-center space-y-6 pt-8 text-xl md:visible md:w-auto md:pt-8 md:text-base"
      >
        <li>
          <a
            class="flex items-center px-2 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href={"/posts"}
            >Posts
          </a>
        </li>
        <li>
          <a
            class="flex items-center px-2 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href={"/projects"}>Projects</a
          >
        </li>
        <li>
          <a
            class="flex items-center px-2 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href={"/about"}>About</a
          >
        </li>
        <li class="md:hidden">
          <a
            class="flex items-center px-2 py-3 font-bold transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href="https://github.com/onwidget/astrowind"
            >Github
          </a>
        </li>
      </ul>
      <div class="mt-auto flex flex-col items-center space-y-4">
        <div class="flex flex-col items-center space-y-4 md:flex">
          <a
            class="inline-flex items-center rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
            aria-label="RSS Feed"
            href="/rss.xml"
          >
            <Icon name="tabler:satellite" class="h-5 w-5" />
          </a>
          <a
            href="https://github.com/onwidget/astrowind"
            class="inline-block rounded-lg p-2.5 text-sm text-zinc-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
            aria-label="Astrowind Github"
          >
            <Icon name="tabler:brand-github" class="h-5 w-5" />
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
